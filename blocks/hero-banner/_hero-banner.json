{
  "definitions": [
    {
      "title": "Hero Banner",
      "id": "hero-banner",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero Banner",
              "filter": "hero-banner-filter",
              "model": "hero-banner-model"
            }
          }
        }
      }
    },
    {
      "title": "Desktop Asset",
      "id": "desktop-asset-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Desktop Asset", "model": "m-desktop-asset" }
          }
        }
      }
    },
    {
      "title": "Mobile Asset",
      "id": "mobile-asset-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Mobile Asset", "model": "m-mobile-asset" }
          }
        }
      }
    },
    {
      "title": "Content",
      "id": "content-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Content", "model": "m-content" }
          }
        }
      }
    },
    {
      "title": "Button",
      "id": "button-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Button", "model": "m-button" }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero-banner-model",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "options": [
            {
              "name": "Product Detail Banner",
              "value": "product-detail-banner"
            }
          ]
        }
      ]
    },
    {
      "id": "m-desktop-asset",
      "fields": [
        {
          "component": "select",
          "name": "role",
          "label": "Block Status",
          "value": "disabled",
          "options": [
            { "name": "Disabled", "value": "disabled" },
            { "name": "Enabled", "value": "desktop-asset" }
          ]
        },
        {
          "component": "reference",
          "name": "dt-asset",
          "label": "Desktop Asset"
        },
        { "component": "text", "name": "dt-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-mobile-asset",
      "fields": [
        {
          "component": "select",
          "name": "role",
          "label": "Block Status",
          "value": "disabled",
          "options": [
            { "name": "Disabled", "value": "disabled" },
            { "name": "Enabled", "value": "mobile-asset" }
          ]
        },
        {
          "component": "reference",
          "name": "mb-asset",
          "label": "Mobile Asset"
        },
        { "component": "text", "name": "mb-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-content",
      "fields": [
        {
          "component": "select",
          "name": "role",
          "label": "Block Status",
          "value": "disabled",
          "options": [
            { "name": "Disabled", "value": "disabled" },
            { "name": "Enabled", "value": "content" }
          ]
        },
        {
          "component": "richtext",
          "name": "content",
          "label": "Banner Content"
        }
      ]
    },
    {
      "id": "m-button",
      "fields": [
        {
          "component": "select",
          "name": "role",
          "label": "Block Status",
          "value": "disabled",
          "options": [
            { "name": "Disabled", "value": "disabled" },
            { "name": "Enabled", "value": "button" }
          ]
        },
        {
          "component": "container",
          "name": "btn-container",
          "label": "Button Settings",
          "collapsible": false,
          "fields": [
            { "component": "text", "name": "btn-text", "label": "Text" },
            { "component": "aem-content", "name": "btn-link", "label": "Link" },
            {
              "component": "select",
              "name": "btn-style",
              "label": "Style",
              "value": "primary",
              "options": [
                { "name": "Primary", "value": "primary" },
                { "name": "Secondary", "value": "secondary" }
              ]
            },
            {
              "component": "select",
              "name": "btn-target",
              "label": "Target",
              "value": "_self",
              "options": [
                { "name": "Same", "value": "_self" },
                { "name": "New", "value": "_blank" }
              ]
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "hero-banner-filter",
      "components": [
        "desktop-asset-item",
        "mobile-asset-item",
        "content-item",
        "button-item"
      ]
    }
  ]
}
