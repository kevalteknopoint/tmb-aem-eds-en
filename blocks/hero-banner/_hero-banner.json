{
  "definitions": [
    {
      "title": "Hero Banner",
      "id": "hero-banner",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero Banner",
              "filter": "hero-banner-filter",
              "model": "hero-banner-model"
            }
          }
        }
      }
    },
    {
      "title": "Desktop Image",
      "id": "desktop-image-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Desktop Image", "model": "m-desktop-image" }
          }
        }
      }
    },
    {
      "title": "Mobile Image",
      "id": "mobile-image-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Mobile Image", "model": "m-mobile-image" }
          }
        }
      }
    },
    {
      "title": "Content",
      "id": "content-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Content", "model": "m-content" }
          }
        }
      }
    },
    {
      "title": "Button 1 Container",
      "id": "button-1-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Button 1", "model": "m-button-1" }
          }
        }
      }
    },
    {
      "title": "Button 2 Container",
      "id": "button-2-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Button 2", "model": "m-button-2" }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero-banner-model",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "options": [{ "name": "Product Detail Banner", "value": "product-detail-banner" }]
        }
      ]
    },
    {
      "id": "m-desktop-image",
      "fields": [
        { "component": "reference", "name": "dt-media", "label": "Desktop Image" },
        { "component": "text", "name": "dt-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-mobile-image",
      "fields": [
        { "component": "reference", "name": "mb-media", "label": "Mobile Image" },
        { "component": "text", "name": "mb-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-content",
      "fields": [{ "component": "richtext", "name": "content", "label": "Banner Content" }]
    },
    {
      "id": "m-button-1",
      "fields": [
        { "component": "container", "name": "btn1-container", "label": "Button 1 Settings", "collapsible": false,
          "fields": [
            { "component": "text", "name": "text", "label": "Text" },
            { "component": "aem-content", "name": "link", "label": "Link" },
            { "component": "select", "name": "style", "label": "Style", "value": "primary",
              "options": [{ "name": "Primary", "value": "primary" }, { "name": "Secondary", "value": "secondary" }]
            },
            { "component": "select", "name": "target", "label": "Target", "value": "_self",
              "options": [{ "name": "Same", "value": "_self" }, { "name": "New", "value": "_blank" }]
            }
          ]
        }
      ]
    },
    {
      "id": "m-button-2",
      "fields": [
        { "component": "container", "name": "btn2-container", "label": "Button 2 Settings", "collapsible": false,
          "fields": [
            { "component": "text", "name": "text", "label": "Text" },
            { "component": "aem-content", "name": "link", "label": "Link" },
            { "component": "select", "name": "style", "label": "Style", "value": "primary",
              "options": [{ "name": "Primary", "value": "primary" }, { "name": "Secondary", "value": "secondary" }]
            },
            { "component": "select", "name": "target", "label": "Target", "value": "_self",
              "options": [{ "name": "Same", "value": "_self" }, { "name": "New", "value": "_blank" }]
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "hero-banner-filter",
      "components": [
        "desktop-image-item",
        "mobile-image-item",
        "content-item",
        "button-1-item",
        "button-2-item"
      ]
    }
  ]
}