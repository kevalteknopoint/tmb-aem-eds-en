{
  "definitions": [
    {
      "title": "Hero Banner",
      "id": "hero-banner",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero Banner",
              "filter": "banner-item-filter",
              "model": "hero-banner-model"
            }
          }
        }
      }
    },
    {
      "title": "Desktop Image",
      "id": "desktop-image",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Desktop Image", "model": "m-desktop-image" }
          }
        }
      }
    },
    {
      "title": "Mobile Image",
      "id": "mobile-image",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Mobile Image", "model": "m-mobile-image" }
          }
        }
      }
    },
    {
      "title": "Banner Content",
      "id": "banner-content",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Content", "model": "m-content" }
          }
        }
      }
    },
    {
      "title": "Button Group",
      "id": "button-group",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { 
              "name": "Button Group", 
              "filter": "button-filter"
            }
          }
        }
      }
    },
    {
      "title": "Button",
      "id": "button-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Button", "model": "m-button" }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero-banner-model",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "options": [{ "name": "Product Detail Banner", "value": "product-detail-banner" }]
        }
      ]
    },
    {
      "id": "m-desktop-image",
      "fields": [
        { "component": "reference", "name": "dt-media", "label": "Desktop Media" },
        { "component": "text", "name": "dt-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-mobile-image",
      "fields": [
        { "component": "reference", "name": "mb-media", "label": "Mobile Media" },
        { "component": "text", "name": "mb-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-content",
      "fields": [{ "component": "richtext", "name": "content", "label": "Banner Text" }]
    },
    {
      "id": "m-button",
      "fields": [
        { "component": "text", "name": "text", "label": "Button Text" },
        { "component": "aem-content", "name": "link", "label": "Button Link" },
        { 
          "component": "select", "name": "type", "label": "Style", "value": "primary",
          "options": [{ "name": "Primary", "value": "primary" }, { "name": "Secondary", "value": "secondary" }]
        },
        {
          "component": "select", "name": "target", "label": "Target", "value": "_self",
          "options": [{ "name": "Same", "value": "_self" }, { "name": "New", "value": "_blank" }]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "banner-item-filter",
      "components": [ "desktop-image", "mobile-image", "banner-content", "button-group" ]
    },
    {
      "id": "button-filter",
      "components": [ "button-item" ]
    }
  ]
}