{
  "definitions": [
    {
      "title": "Hero Banner",
      "id": "hero-banner",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero Banner",
              "filter": "banner-item-filter",
              "model": "hero-banner-model"
            }
          }
        }
      }
    },
    {
      "title": "Banner Item",
      "id": "banner-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Banner Item",
              "filter": "banner-sub-item-filter"
            }
          }
        }
      }
    },
    {
      "title": "Desktop Image",
      "id": "desktop-image",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Desktop Image", "model": "m-desktop-image" }
          }
        }
      }
    },
    {
      "title": "Banner Content",
      "id": "banner-content",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Content", "model": "m-content" }
          }
        }
      }
    },
    {
      "title": "Button Group",
      "id": "button-group",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { 
              "name": "Button Group", 
              "filter": "only-buttons-filter"
            }
          }
        }
      }
    },
    {
      "title": "Button",
      "id": "button-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": { "name": "Button", "model": "m-button" }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero-banner-model",
      "fields": [
        { "component": "text", "name": "classes", "label": "Block CSS Class" }
      ]
    },
    {
      "id": "m-desktop-image",
      "fields": [
        { "component": "reference", "name": "dt-media", "label": "Image" },
        { "component": "text", "name": "dt-alt", "label": "Alt Text" }
      ]
    },
    {
      "id": "m-content",
      "fields": [{ "component": "richtext", "name": "content", "label": "Text" }]
    },
    {
      "id": "m-button",
      "fields": [
        { "component": "text", "name": "text", "label": "Label" },
        { "component": "aem-content", "name": "link", "label": "URL" },
        { "component": "select", "name": "style", "label": "Style", "options": [{"name":"Primary","value":"primary"},{"name":"Secondary","value":"secondary"}] }
      ]
    }
  ],
  "filters": [
    {
      "id": "banner-item-filter",
      "components": [ "banner-item" ]
    },
    {
      "id": "banner-sub-item-filter",
      "components": [ "desktop-image", "banner-content", "button-group" ]
    },
    {
      "id": "only-buttons-filter",
      "components": [ "button-item" ]
    }
  ]
}